<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <!--Main Navigation-->
  <header>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>
    <!-- Navbar -->


    <!-- Background image -->
    <div class="p-5 text-center bg-image" style="
                      background-image: url('./img/bg1.jpg');
                      height: 250px; margin-bottom: 50px;
                    ">
      <div class="mask" style="background-color: rgba(0, 0, 0, 0.4);">
        <div class="d-flex justify-content-center align-items-center h-100">
          <div class="text-white">
            <h1 class="mb-3">Datasets</h1>
            <h4 class="mb-3">Open Datasets released by JUSense</h4>
            <!-- <a class="btn btn-outline-light btn-lg" href="#!" role="button">Call to action</a> -->
          </div>
        </div>
      </div>
    </div>
    <!-- Background image -->


  </header>

  <!--Main layout-->
  <main class="mt-3">
    <div class="container">
      <!--Section: Content-->
      <section class="text-center">
        <!-- <h4 class="mb-5"><strong>In the Spotlight</strong></h4> -->

        <div class="row">

          <% let k=1; 
          rows.forEach(function(row) { %>

          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card">
              <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="<%=row['Image']%>" class="img-fluid" style="padding: 30px;" />
              </div>
              <div class="card-body">
                <h5 class="card-title"><%=row['Dataset name']%>
                </h5>
                <!-- <hr> -->
                <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
                  <%=row['Description']%>
                </p>
                <br>
                <a href="#!" class="btn btn-primary">Download</a>
                <a href="#!" class="btn btn-secondary">Explore</a>
              </div>
              <div class="card-footer text-muted">Released: <%=row['Release date']%></div>
            </div>
          </div>

          <% k+=1; }); %>

        </div>
      </section>
      <!--Section: Content-->

    </div>
  </main>


  </div>
  </main>
  <!--Main layout-->

  <!-- Footer -->
  <%- include('../partials/footer'); %>
  <!-- Footer -->

  <!-- MDB -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
  <!-- Custom scripts -->
  <!-- <script type="text/javascript" src="js/script.js"></script> -->
</body>

</html>