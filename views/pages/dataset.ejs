<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <!--Main Navigation-->
  <header>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>
    <!-- Navbar -->


    <!-- Background image -->
    <div class="p-5 text-center bg-image" style="
                      background-image: url('./img/bg1.jpg');
                      height: 250px; margin-bottom: 50px;
                    ">
      <div class="mask" style="background-color: rgba(0, 0, 0, 0.4);">
        <div class="d-flex justify-content-center align-items-center h-100">
          <div class="text-white">
            <h1 class="mb-3">Datasets</h1>
            <h4 class="mb-3">Open Datasets released by JUSense</h4>
            <!-- <a class="btn btn-outline-light btn-lg" href="#!" role="button">Call to action</a> -->
          </div>
        </div>
      </div>
    </div>
    <!-- Background image -->


  </header>

  <!--Main layout-->
  <main class="mt-3">
    <div class="container">
      <!--Section: Content-->
      <section class="text-center">
        <!-- <h4 class="mb-5"><strong>In the Spotlight</strong></h4> -->

        <div class="row">

          <% let k=1; 
          rows.forEach(function(row) { %>

          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card">
              <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="<%=row['Image']%>" class="img-fluid" style="padding: 30px;" />
              </div>
              <div class="card-body">
                <h5 class="card-title"><%=row['Dataset name']%>
                </h5>
                <!-- <hr> -->
                <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
                  <%=row['Description']%>
                </p>
                <br>
                <a href="#" data-mdb-toggle="modal" data-mdb-target="#modal<%=k%>" class="btn btn-primary">Explore</a>
              </div>
              <div class="card-footer text-muted">Released: <%=row['Release date']%></div>
            </div>
          </div>

          <% k+=1; }); %>

        </div>

        <% k=1; 
        rows.forEach(function(row) { %>

        <div class="modal fade" id="modal<%=k%>" tabindex="-1" aria-labelledby="modal<%=k%>Label" aria-hidden="true" style="z-index: 4000;">
          <div class="modal-dialog modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="modal<%=k%>Label"><%=row["Dataset name"]%></h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body text-lg-start">
                <!-- <h5>Description</h5> -->
                <p>
                  <strong>Description: </strong><%=row["Description"]%>
                </p>
                <span><b>Released:</b> <%=row['Release date']%></span><br />
                <hr>
                <p>
                  Access to the dataset is based on an End-User License Agreement. The use of the dataset is strictly restricted to non-commercial research. Please provide us the following information about the authorized signatory:
                <ul>
                  <li>Full name</li>
                  <li>Name of organization</li>
                  <li>Position / job title</li>
                  <li>Academic / professional email address</li>
                  <li>How will this dataset benefit your research work?</li>
                </ul>

                </p>
                <p>
                  To request access to the dataset, kindly drop an email to <a class="text-decoration-none text-decoration-underline" href="mailto:jusenseresearch@gmail.com">jusenseresearch@gmail.com</a> with the mentioned information from your official/academic email ID with the subject: Dataset Request
                </p>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        <% k+=1; }); %>

      </section>
      <!--Section: Content-->

    </div>
  </main>


  </div>
  </main>
  <!--Main layout-->

  <!-- Footer -->
  <%- include('../partials/footer'); %>
  <!-- Footer -->

  <!-- MDB -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
  <!-- Custom scripts -->
  <!-- <script type="text/javascript" src="js/script.js"></script> -->
</body>

</html>