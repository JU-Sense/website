      <section class="text-center">
        <h4 class="mb-5"><strong>In the Spotlight</strong></h4>

        <div class="row align-items-center">
          <% for (let i=0;i<3;i++) { %>
          <div class="modal fade" id="modal<%=i%>" tabindex="-1" aria-labelledby="modal<%=i%>Label" aria-hidden="true">
            <div class="modal-dialog modal-xl">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="modal<%=i%>Label"><%=rows[i]["News Heading"]%></h5>
                  <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-lg-start">
                  <!-- <h5>Description</h5> -->
                  <p><%=rows[i]["Description"]%></p>
                  <em>
                  <p class="text-muted">By <%=rows[i]['Published By'] %></p>
                </em>
                
                <p class="text-muted"><%=rows[i]['Publish Date']%></p>
              </div>

                <!-- <button type="button" class="btn btn-primary">Read</button> -->
                <div class="modal-footer">
                  <a href="<%=rows[i]['Link']%>" target="_blank"><button type="button" class="btn btn-primary">Explore More</button></a>
                  <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-md-12 mb-4">
            <a href="" data-mdb-toggle="modal" data-mdb-target="#modal<%=i%>">
              <div class="card">
                <div class="bg-image hover-overlay ripple d-flex" data-mdb-ripple-color="light">
                  <img src="<%=rows[i]['Cover Image']%>" class="img-fluid" style="padding: 10px" />
                </div>
                <div class="card-body">
                  <h5 class="card-title" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis">
                    <%=rows[i]["News Heading"]%>
                  </h5>
                  <!-- <hr> -->
                  <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis">
                    <%=rows[i]["Description"]%>
                  </p>
                  <!-- <a href="#!" class="btn btn-primary">Button</a> -->
                </div>
                <!-- <div class="card-footer text-muted">Published: 20 April, 2018</div> -->
              </div>
            </a>
